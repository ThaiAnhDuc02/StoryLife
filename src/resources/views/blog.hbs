<section>
  <div class="container">
    <div class="row gy-5">
      <!-- Latest Posts -->
      <main class="col-lg-8">
        <div class="container">
          <div class="row gy-4 mb-5">
            <!-- post -->
            {{#each blogs}}
            <div class="col-xl-6"><a class="mb-3" href="blog/{{this.slug}}">
               <div style="height:255px; overflow:hidden"><img class="img-fluid" src="{{this.image_cover}}" alt="image cover" width="100%"></div></a>
              </a>
              <div
